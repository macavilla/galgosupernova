---
import { SOCIAL_MEDIA } from '@constants/social-media'

import LogoLink from '@components/Logo/LogoLink.astro'
---

<footer
	class="flex flex-col-reverse justify-center items-center border-t border-gray-200 py-6 gap-4 md:flex-row md:justify-between"
>
	<LogoLink />
	<div>
		<ul
			class="flex flex-col justify-end gap-4 col-span-2 text-center md:flex-row md:text-left"
		>
			{
				SOCIAL_MEDIA.map(({ name, url }) => (
					<li>
						<a href={url} target="_blank">
							{name}
						</a>
					</li>
				))
			}
		</ul>
	</div>
</footer>
